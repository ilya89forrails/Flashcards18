<%= simple_form_for @card, :html => {:multipart => true} do |f| %>
  <br>
  	Original
  	<p> <%= f.input :original_text, label: false %>
  <br>
  	Translated
  	<p> <%= f.input :translated_text, label: false %>
  <br>
      Add picture: 
      <%= f.file_field :pic %>   
  <br>   
    <%= f.button :submit %>
<% end %>
